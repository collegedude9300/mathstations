<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MathStations.Multiplication">
    <ContentPage.Content>

        <StackLayout Margin="20,20,20,20">
        <Frame BackgroundColor="LightGreen" Padding="24" CornerRadius="0">
            <Label Text="Multiplication Page!" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36" />
        </Frame>
<Label Text="Which level do you want to start off with first?"> </Label>
    <Button x:Name="buttonMultOne" Text="Level 1: Beginner" Clicked="MultOne" VerticalOptions="Center"/>
    <Button x:Name="buttonMultTwo" Text="Level 2: Easy" Clicked="MultTwo" VerticalOptions="Center"/>
    <Button x:Name="buttonMultThree" Text="Level 3: Medium" Clicked="MultThree" VerticalOptions="Center"/>
    <Button x:Name="buttonMultFour" Text="Level 4: Hard" Clicked="MultFour" VerticalOptions="Center"/>
    <Label Text="To go back to the main page, click on, 'Go To Main Page'."/>
    <Button x:Name="buttonhome" Text="Go To Main Page" Clicked="BackToMain" VerticalOptions="Center"/>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>
