<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MathStations.Division">
    <ContentPage.Content>
                <StackLayout Margin="20,20,20,20">
        <Frame BackgroundColor="SandyBrown" Padding="24" CornerRadius="0">
            <Label Text="Division Page!" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36" />
        </Frame>
<Label Text="Which level do you want to start off with first?"> </Label>
    <Button x:Name="buttonDivOne" Text="Level 1: Beginner" Clicked="DivOne" VerticalOptions="Center"/>
    <Button x:Name="buttonDivTwo" Text="Level 2: Easy" Clicked="DivTwo" VerticalOptions="Center"/>
    <Button x:Name="buttonDivThree" Text="Level 3: Medium" Clicked="DivThree" VerticalOptions="Center"/>
    <Button x:Name="buttonDivFour" Text="Level 4: Hard" Clicked="DivFour" VerticalOptions="Center"/>
    <Label Text="To go back to the main page, click on, 'Go To Main Page'."/>
    <Button x:Name="buttonhome" Text="Go To Main Page" Clicked="BackToMain" VerticalOptions="Center"/>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>
